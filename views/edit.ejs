<%- include("partials/header.ejs") %>
 <!-- Home Page -->
  <main class="container editrow">
    <form action="/create" method="post">
      <h2 class="mb-3 mt-5 fw-normal text-center"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-pen" viewBox="0 0 16 16">
        <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001m-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708z"/>
      </svg> Edit</h2>

      <div class="mb-1 mt-2 col-6">
        <h5><label class="text-start" for="floatingInput">Topic</label></h5>
        <textarea class="form-control bg-light" id="floatingInput" placeholder="Write Here..." name="createTopic"><%=editTopic%></textarea>
      </div>
      <div class="mb-1 mt-2 col-12">
        <h5><label class="text-start" for="floatingInput">Content</label></h5>
        <textarea class="form-control bg-light" id="floatingInput" placeholder="Write Here..." name="createPost" oninput="autoResize(this)"><%=editData%></textarea>
        
      </div>

      <div class="d-flex justify-content-center">
        <button class="mt-3 w-50 btn btn-lg btn-primary text-white" type="submit">Submit</button>
      </div>
    </form>
  </main>
  <script>
    function autoResize(textarea) {
        textarea.style.height = "auto";
        textarea.style.height = (textarea.scrollHeight + 2) + "px";
    }
  </script>

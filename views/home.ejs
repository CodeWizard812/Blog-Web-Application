<%- include("partials/header.ejs") %>
 <!-- Home Page -->
  <main class="container home row">
    <form action="/create" method="post">
      <div class="d-flex justify-content-center"><img class="mb-2 mt-5" src="images/blog.png" alt="sign up icon" width="72" height="72"> </div>
      <h1 class="mb-5 fw-normal text-center">Create a New Blog</h1>
      
      <div class="mb-1 mt-2 col-6">
        <h5><label class="text-start" for="floatingInput">Topic</label></h5>
        <input type="topic" class="form-control bg-light" id="floatingInput" placeholder="Write Here..." name="createTopic">
        
      </div>
      <div class="mb-1 mt-2 col-12">
        <h5><label class="text-center" for="floatingInput" >Content</label></h5>
        <textarea class="form-control bg-light" id="floatingInput" placeholder="Write here..." name="createPost" oninput="autoResize(this)"></textarea>
      </div>
      

      <div class="d-flex justify-content-center">
        <button class="mt-3 w-50 btn btn-lg createButton text-white" type="submit">Create</button>
      </div>

    </form>
  </main>
  <script>
    function autoResize(textarea) {
        textarea.style.height = "auto";
        textarea.style.height = (textarea.scrollHeight + 2) + "px";
    }
  </script>
